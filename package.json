{
  "name": "tlock",
  "version": "1.0.0",
  "private": true,
  "description": "Tlock 2FA wallet system",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --parallel --topological run build",
    "dev:snap": "yarn workspaces foreach --parallel --interlaced --include '@tlock/snap' --include '@tlock/site' --include '@tlock/shared' run dev",
    "dev:mobile": "yarn workspace @tlock/mobile dev",
    "build:snap": "yarn workspace @tlock/snap build",
    "build:mobile:android": "yarn workspace @tlock/mobile build:android",
    "deploy:functions": "yarn workspace @tlock/firebase/functions deploy",
    "test": "yarn workspaces foreach run test"
  },
  "dependencies": {
    "expo": "~53.0.17"
  },
  "devDependencies": {
    "@lavamoat/allow-scripts": "^3.3.4",
    "@lavamoat/preinstall-always-fail": "^2.0.0",
    "@metamask/eslint-config": "^14.0.0",
    "@metamask/eslint-config-browser": "^14.0.0",
    "@metamask/eslint-config-jest": "^14.0.0",
    "@metamask/eslint-config-nodejs": "^14.0.0",
    "@metamask/eslint-config-typescript": "^14.0.0",
    "eslint": "^9.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import-x": "^4.3.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsdoc": "^50.2.4",
    "eslint-plugin-n": "^17.10.3",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.2.18",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.6.0"
  },
  "resolutions": {
    "cookie": "^0.7.1",
    "path-to-regexp@0.1.10": "^0.1.12",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "ws": "^8.17.1"
  },
  "packageManager": "yarn@3.2.1",
  "engines": {
    "node": ">=18.6.0"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "sharp": true,
      "eslint-plugin-import-x>unrs-resolver": false
    }
  }
}
