{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "incremental": true,
        "tsBuildInfoFile": "./tsconfig.tsbuildinfo"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "**/*.test.ts",
        "**/*.spec.ts",
        "**/__tests__/**"
    ]
}